@model Hff.MVC.Models.ViewModels.EmployeeViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Detail</h2>
<form class="form-group" method="post">
    <label>Personel Adı</label>
    @Html.TextBoxFor(p => p.EmployeeName, new { @class = "form-control" })
    <br />
    <label>
        Personel Soyadı
    </label>
    @Html.TextBoxFor(p=>p.EmployeeSurname,new  { @class="form-control"})
    <label>Personel Fotoğrafı</label>
    @Html.TextBoxFor(p=>p.Picture,new  {@class="form-control" })
    <label>Personel Departmanı</label>
    @Html.DropDownListFor(p=>p.DepartmentId,(List<SelectListItem>)ViewBag.Departments, new {@class="form-control" })
    @Html.HiddenFor(p=>p.EmployeeId)

    <button class="btn btn-success">Güncelle</button>
</form>
